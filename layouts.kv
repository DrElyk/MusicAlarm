<F>:
	Image:
		source: "sun.jpg"
		allow_stretch: True
		size: self.size
		size_hint_y: None
		size_hint_x: None
		width: self.parent.width
		height: self.parent.width/self.image_ratio
	
	FloatLayout:
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .75
			
			Label:
				text: app.time
				font_size: 100
			
			Label:
				id: info
				text: "What time do you want to get up?"
				font_size: 25
				size_hint_y: None

			BoxLayout:
				orientation: 'horizontal'
				size_hint_y: .25
				
				TextInput:
					id: my_time
					font_size: 50
				
				Button:
					text: "Set Alarm"
					on_press: app.alarm()
					background_normal: ''
					background_color: 1, .3, .4, .85
